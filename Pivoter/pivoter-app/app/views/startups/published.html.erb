<div class="container">
	<%- model_class = Startup -%>
	<br>
	<div class="row">
		  <center>
		  	<h1 class="text-center"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
		  </center>
		  <hr>
	</div>
  <div class="row">
    <div class="col-md-12">
      <%= search_form_for @q, :html => {:class => 'navbar-form navbar-right', :role => 'form'} do |f| %>

      <div class="form-group">
          <%= f.search_field :name_or_category_or_country_cont, :class => 'form-control', placeholder: "Search" %>
      </div>
          <%= f.submit "Discover", :class => 'btn btn-primary btn-lg'%>
    <% end %>
    </div>
    <div class="col-md-12"><br></div>
  </div>


	<div class="rows">
		<% @startups.each do |startup| %>
		    <div >
              <div class="col-sm-5 col-md-2">
			    <div class="thumbnail">
			      <%= image_tag(startup.logo, :class => 'imgBorder img-responsive',:style => 'width:100px;height:100px;')%>
			      <div class="caption text-center">
			        <h3><%= startup.name %></h3>
		        	<div class="row">
		        		<div class="col-md-12">
		        			<% show_country startup.country%>
	        			</div>
		        	</div>
			      </div>
			      <p>
			      	<%= link_to t('view'),startup_path(startup), :class => 'btn btn-primary col-md-offset-4' %>
			      </p>
			    </div>
			  </div>
			</div>
		<% end %>
	</div>
</div>


<script type="text/javascript">
	function equalHeight(group) {    
	    tallest = 1;    
	    group.each(function() {       
	        thisHeight = $(this).height();       
	        if(thisHeight > tallest) {          
	            tallest = thisHeight;       
	        }    
	    });    
	    group.each(function() { $(this).height(tallest); });
	} 

	$(document).ready(function() {   
	    equalHeight($(".caption")); 
	});
</script>
