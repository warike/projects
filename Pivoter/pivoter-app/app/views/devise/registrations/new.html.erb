
<div class="container">
	<%= form_for resource, :as => resource_name, :html => { :class => 'form-horizontal' } , :url => registration_path(resource_name) do |f| %>
	  
	  <%= devise_error_messages! %>
      <div class="row">
        <div class="col-md-7">
          <div class="form-group">
            <div class="col-sm-4 control-label"%></div>
            <div class="col-sm-7">
              <br>
              <h2><strong>Sign up</strong></h2>
              <hr>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :email, :class => 'col-sm-4 control-label' %>
            <div class="col-sm-7">
              <%= f.email_field :email, autofocus: true, autocomplete: "off", :class => 'form-control', :placeholder=>'example@email.com' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :username, :class => 'col-sm-4 control-label' %>
            <div class="col-sm-7">
              <%= f.text_field :username, autofocus: true, autocomplete: "off", :class => 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :name, :class => 'col-sm-4 control-label' %>
            <div class="col-sm-7">
              <%= f.text_field :name, autofocus: true, autocomplete: "off", :class => 'form-control', :placeholder => 'Full Name' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :country, :class => 'col-sm-4 control-label' %>
            <div class="col-sm-7">
              <%= f.select(:country,options_for_select(Startup.new.countries,'Chile'),{}, :class => 'form-control select2')%>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, :class => 'col-sm-4 control-label' %>
            <div class="col-sm-7">
              <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
            </div>

          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, :class => 'col-sm-4 control-label' %>
            <div class="col-sm-7">
              <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
            </div>
          </div>


         <div class="form-group">
            <div class="col-sm-4 control-label"%></div>
            <div class="col-sm-7">
              <%= f.submit "Sign up", :class => 'btn btn-success' %> |
              <%= link_to "Sign in", new_session_path(resource_name), :class => 'btn btn-default' %>
            </div>
         </div>

      </div>
      <div class="col-md-5">
        <div class="col-sm-12">
          <br>
          <h2><strong>Sign up with social network</strong></h2>
          <hr>
              <a class="btn btn-block btn-social btn-linkedin btn-social-padding" href="<%= user_omniauth_authorize_path(:linkedin) %>">
                <i class="fa fa-linkedin"></i> Sign in with LinkedIn
              </a>
              <a class="btn btn-block btn-social btn-twitter btn-social-padding" href="<%= user_omniauth_authorize_path(:twitter) %>">
                <i class="fa fa-twitter"></i> Sign in with Twitter
              </a>
        </div>
      </div>


    <% end %>
</div>