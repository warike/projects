<%= form_for @entry , :html => {:class =>'form-inline'}, :validate => true do |f| %>
    <div class="modal fade" id="modal_entry" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel"> <span id="newentrybtn" class="glyphicon glyphicon-plus">&nbsp;New Entry</span></h4>
          </div>
          <div class="row" style="width: 900px; margin-left: 4px;">
            <div class="col-xs-11">
              <div class="form-group">
                <%= f.label :title, :class => 'control-label' %><br>
                <div class="controls">
                    <%= f.text_field :title, :class => 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :entry_type, :class => 'control-label' %><br>
                <div class="controls">
                  <%= f.select(:entry_type, options_for_select(@entry.entry_types, @entry.entry_type), {} ,{ :class => 'form-control'})%>
                </div>
              </div>
              <div class="form-group" id="video-url">
                <%= f.label :url, :class => 'control-label' %><br>
                <div class="controls">
                    <%= f.text_field :url, :class => 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :description, :class => 'control-label' %><br>
                <div class="controls">
                    <%= f.text_area :description, :class => 'form-control', :rows => '6' %>
                </div>
              </div>
              <%= f.hidden_field :show_order %>
              <%= f.hidden_field :startup_id %>
          </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Back</button>
            <%= f.submit :value=>"Save Entry", :class => 'btn btn-success'%>
          </div>
        </div>
      </div>
    </div>
<% end %>

