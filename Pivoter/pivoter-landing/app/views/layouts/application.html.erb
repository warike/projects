<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel"> Create invitation</h4>
      </div>
      <div class="modal-body">
        <div class="alert alert-success hidden" role="alert" id="alert_suscribe_modal">
          <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
          <i class="fa fa-check"></i> <%= t('alert').to_s.html_safe %>

        </div>
        <%= form_for @visit, :remote => true, data: {type: :json } , html: { role: :form, 'data-model' => 'visit', :id => 'contact-form' } do |f| %>
            <div class="form-group">
              <div class="input-group">
                <%= f.text_field :email, :placeholder => t('email_placeholder'), :class => 'form-control input-hg'%>
                <%= f.hidden_field :referralID, :value=> params[:ref] %>
                <span class="input-group-btn">
                                <button class="btn btn-inverse btn-hg" type="submit" name="submit">
                                  <span class="fui-mail"></span></button>
                              </span>
              </div><!-- /input-group -->

            </div>
            <button type="submit" class="btn btn-info input-lg  col-xs-12">
              <%=t('email_button')%></button>
        <% end %>
      </div>


    </div>
