<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.samtech.autoseguro24siete.MenuActivity"
    android:background="#FFF"
    android:id="@+id/activity_menu">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="right"
        android:layout_gravity="right"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/barra_superior"
        android:background="#b71c1c">

        <ImageView
            android:id="@+id/fondo_barra_superior"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/top_franja_rojo"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/imageView9"
            android:src="@drawable/titulo_superior"
            android:scaleType="fitCenter"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:paddingTop="5dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_fila1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/barra_superior"
        android:layout_above="@+id/botones_inferior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="50">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/bg_botones_main"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/btnEstacionado"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/boton_modoe_desactivado"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Activar \n Modo Estacionado"
                    android:id="@+id/textView21"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="5dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_botones_main"
                android:layout_weight="50"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSOS"
                    android:baselineAlignBottom="false"
                    android:src="@drawable/boton_sos"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:paddingTop="20dp"
                    android:paddingRight="40dp"
                    android:paddingLeft="40dp"
                    android:paddingBottom="40dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="SOS"
                    android:id="@+id/textView22"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingTop="15dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="50"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@drawable/bg_botones_main">

                <ImageView
                    android:id="@+id/btnHistorial"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:src="@drawable/boton_historial"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:paddingTop="20dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Historial"
                    android:id="@+id/textView23"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingBottom="15dp"
                    android:layout_marginTop="-30dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_botones_main"
                android:layout_weight="50">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnVelMax"
                    android:layout_weight="50"
                    android:src="@drawable/boton_velocidad_desactivado"
                    android:scaleType="fitCenter"
                    android:paddingTop="20dp"
                    android:adjustViewBounds="true"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Control de Velocidad"
                    android:id="@+id/textView24"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:paddingBottom="15dp"
                    android:layout_marginTop="-30dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnUbicacion"
        android:src="@drawable/boton_ubicacion"
        android:layout_centerInParent="true"
        android:layout_margin="120dp"
        android:adjustViewBounds="true" />

    <LinearLayout
        android:id="@+id/botones_inferior"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#b71c1c"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="right">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnNotificaciones"
            android:src="@drawable/boton_notificaciones"
            android:layout_weight="25"
            android:scaleType="fitCenter"
            android:padding="10dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnConfiguracion"
            android:layout_weight="25"
            android:src="@drawable/boton_configuraciones"
            android:scaleType="fitCenter"
            android:paddingTop="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="7dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btnCerrarSesion"
            android:src="@drawable/boton_cerrarsesion"
            android:layout_weight="25"
            android:scaleType="fitCenter"
            android:paddingLeft="10dp"
            android:paddingTop="12dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp" />

    </LinearLayout>
